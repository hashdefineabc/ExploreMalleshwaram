@model PlaceModel

<div class="card mb-4 shadow-sm">
    <img src="@(string.IsNullOrEmpty(Model.CoverImageUrl) ? "/images/noimage.png" : Model.CoverImageUrl)" class="img-thumbnail" />
    <div class="card-body">
        <h3 class="card-title">@(string.IsNullOrEmpty(Model.PlaceName) ? "Name is not available" : Model.PlaceName)</h3>
        <p class="card-text">@(string.IsNullOrEmpty(Model.PlaceTagLine) ? "Tag Line is not availabe": Model.PlaceTagLine)</p>
        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                <a href="/place/getplace/@Model.PlaceId"
                   class="btn btn-sm btn-outline-secondary">View details</a>
            </div>
            <small class="text-muted">@(string.IsNullOrEmpty(Model.PlaceCategory) ? "NA" : Model.PlaceCategory)</small>
        </div>
    </div>
</div>

